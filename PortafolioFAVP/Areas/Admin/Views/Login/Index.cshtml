@{
    Layout = "~/areas/admin/views/shared/layout.cshtml";
}
@{
    ViewBag.Title = "Autenticación";
}

<div id="login">
    <h1 class="page-header text-center">Autenticación en el sistema</h1>

    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="panel panel-default">
                <div class="panel-heading">Acceso al sistema</div>
                <div class="panel-body">
                    @using (Html.BeginForm("Acceder", "Login", FormMethod.Post))  //Formulario que apunta a una accion que se llama Acceder dentro de loginController, enviada por metodo post
                    {
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="Email" class="form-control" placeholder="Ingrese su correo electrónico" />
                        </div>
                        <div class="form-group">
                            <label>Contraseña</label>
                            <input type="password" name="Password" class="form-control" placeholder="Ingrese su password" />
                        </div>
                        <div class="text-right">
                            <button data-ajax="true" type="submit" class="btn btn-primary">
                                <!-- data-ajax="true" para que el formulario se convierta en ajax -->
                                Ingresar
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>